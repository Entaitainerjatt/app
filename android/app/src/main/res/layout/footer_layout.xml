<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/layoutHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageHome"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/home_white" />

            <com.entertainerJatt.app.android.util.TextViewWithRegularFont
                android:id="@+id/textHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFF"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFav"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageFav"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/fav_red" />

            <com.entertainerJatt.app.android.util.TextViewWithRegularFont
                android:id="@+id/textFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourites"
                android:textColor="#E6767E"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDirectory"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageDir"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/directory_red" />

            <com.entertainerJatt.app.android.util.TextViewWithRegularFont
                android:id="@+id/textDir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Directory"
                android:textColor="#E6767E"
                android:textSize="12sp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutUpdates"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.entertainerJatt.app.android.util.TextViewWithRegularFont
                android:id="@+id/textUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageUpdate"
                android:gravity="center"
                android:text="Updates"
                android:textColor="#E6767E"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageUpdate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/updates" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutMore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageMore"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/more_red" />

            <com.entertainerJatt.app.android.util.TextViewWithRegularFont
                android:id="@+id/textMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textColor="#E6767E"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>