<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="5dp"

        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        app:cardUseCompatPadding="true"
        card:cardCornerRadius="2dp"
        card:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <com.entertainerJatt.app.android.util.TextViewWithBoldFont
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/userPic"
                android:layout_toRightOf="@+id/userPic"
                android:text="dvdvdtthtrytm"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />

            <com.entertainerJatt.app.android.util.TextViewWithRegularFont
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvType"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:text=""
                android:textColor="#333"
                android:textSize="15sp" />

            <com.entertainerJatt.app.android.util.TextViewWithRegularFont
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/phoneText"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/phoneText"
                android:layout_below="@+id/phoneText"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_above="@+id/emailText"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/userPic"
                android:layout_toRightOf="@+id/userPic"
                app:srcCompat="@mipmap/call" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/emailText"
                android:layout_alignTop="@+id/emailText"
                android:layout_toLeftOf="@+id/phoneText"
                android:layout_toStartOf="@+id/phoneText"
                app:srcCompat="@mipmap/mail" />

            <com.entertainerJatt.app.android.util.TextViewWithRegularFont
                android:id="@+id/tvType"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#333"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textName"
                android:layout_alignStart="@+id/textName"
                android:layout_below="@+id/textName"
                android:orientation="horizontal"
                android:text="">

            </com.entertainerJatt.app.android.util.TextViewWithRegularFont>

            <com.entertainerJatt.app.android.util.CircularImageView
                android:id="@+id/userPic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/defaut_directory" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>